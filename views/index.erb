  </audio>
  <body>
    <!-- Begin page content -->



    <div id="clouds">
      <div class="container">
        <% haikus.each do |haiku| %>
        <p class="lead"><%= haiku.body %></p>
        <h5 class="pull-right"><a href="<%= haiku.url %>"><%= haiku.url %></a></h5>
        <% end %>
      </div>
    	<div class="cloud x1"></div>
    	<div class="cloud x2"></div>
    	<div class="cloud x3"></div>
    	<div class="cloud x4"></div>
    	<div class="cloud x5"></div>
      <div id="footer">
        <div class="container">
          <p class="text-muted">Breathe... <a href="http://github.com/arfon/haiku">arXiv Zen</a>, part of #sciencehackday.</p>
        </div>
      </div>
    </div>
  </body>
</html>
